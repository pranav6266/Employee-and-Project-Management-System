<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Employees</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
<%- include('../partials/_admin_navbar') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Manage Employees</h3>
        <a href="/admin/employees/add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Employee</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% employees.forEach(emp => { %>
                        <tr>
                            <td><%= emp.name %></td>
                            <td><%= emp.email %></td>
                            <td><span class="badge bg-secondary"><%= emp.role %></span></td>
                            <td>
                                <% if (emp.status === 'active') { %>
                                    <span class="badge bg-success">Active</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Inactive</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/admin/employees/<%= emp._id %>/edit" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
                                <form action="/admin/employees/<%= emp._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</body>
</html>