<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
<%- include('../partials/_admin_navbar') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Manage Projects</h3>
        <a href="/admin/projects/add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Project</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% projects.forEach(project => { %>
                        <tr>
                            <td><%= project.title %></td>
                            <td>
                                <% if (project.status === 'Not Started') { %> <span class="badge bg-secondary"><%= project.status %></span> <% } %>
                                <% if (project.status === 'In Progress') { %> <span class="badge bg-info text-dark"><%= project.status %></span> <% } %>
                                <% if (project.status === 'Completed') { %> <span class="badge bg-success"><%= project.status %></span> <% } %>
                            </td>
                            <td><%= new Date(project.startDate).toLocaleDateString() %></td>
                            <td><%= new Date(project.endDate).toLocaleDateString() %></td>
                            <td>
                                <a href="/admin/projects/<%= project._id %>" class="btn btn-sm btn-primary"><i class="bi bi-eye"></i></a>
                                <a href="/admin/projects/<%= project._id %>/edit" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
                                <form action="/admin/projects/<%= project._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure? This will also delete all assigned tasks.');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</body>
</html>